{
    "$schema": "http://json-schema.org/draft-06/schema",
    "title": "Scene Meta Info",
    "type": "object",
    "required": [
        "Scene Number",
        "Map Number",
        "Event ID",
        "Title"
    ],
    "additionalProperties": false,
    "properties": {
        "SceneNumber": {
            "$ref" : "#definitions/numLike"
        },
        "Map Number": {
            "$ref" : "#definitions/numLike"
        },
        "Event ID": {
            "$ref" : "#definitions/numLike"
        },
        "Title": {
            "$ref" : "#definitions/stringLike"
        },
        "Risk Level": {
            "$ref" : "#definitions/numLike"
        },
        "Tags": {
            "type": "array",
            "minItems" : 1,
            "tagList": {
                "$ref" : "#definitions/stringLike"
            }
        }
    },
    "definitions" : {
        "numLike" : {
            "type" : "number", "minimum" : 0
        },
        "stringLike" : {
            "type" : "string", "minLength" : 1
        }
    }
}